@model IEnumerable<EcommerceShop.Models.Product>
<!-- product_list start-->
<section class="product_list section_padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="section_tittle text-center">
                    <h2>Product <span></span></h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="product_list_slider owl-carousel">
                    <div class="single_product_list_slider">
                        <div class="row align-items-center justify-content-between">
                            @foreach(var item in Model)
                            {
                                <div class="col-lg-3 col-sm-6">
                                    <div class="single_product_item">
                                        <img src="/Template/@item.ProductPhoto" alt="">
                                        <div class="single_product_text">
                                            <h4>@item.ProductName</h4>
                                            <h3>@item.ProductPrice</h3>
                                            <a href="/Cart/AddToCart/?ProductId=@item.ProductId" class="add_cart">+ add to cart<i class="ti-heart"></i></a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- product_list end-->
