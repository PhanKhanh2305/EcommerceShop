@model Cart

<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <h2>Cart Products</h2>
                        <p>Home <span>-</span>Cart Products</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb start-->
<!--================Cart Area =================-->
<section class="cart_area padding_top">
    <div class="container">
        <div class="cart_inner">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Tên Sản Phẩm</th>
                            <th scope="col">Giá </th>
                            <th scope="col">Số Lượng</th>
                            <th scope="col">Tổng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var line in Model?.Lines)
                        {
                            <tr>
                                <td>
                                    <div class="media">
                                        <div class="d-flex">
                                            <img src="@line.Product.ProductPhoto" alt="" />
                                        </div>
                                        <div class="media-body">
                                            <p>@line.Product.ProductName</p>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <h5>@line.Product.ProductPrice</h5>
                                </td>
                                <td>
                                    <div class="product_count">
                                        <a href="/Cart/UpdateCart/?ProductId=@(line.Product.ProductId)" class="input-number-decrement"> <i class="ti-angle-down"></i></a>
                                        <input class="form-control" type="text" value="@line.Quantity">
                                        <a href="/Cart/AddToCart/?ProductId=@line.Product.ProductId" class="input-number-increment"> <i class="ti-angle-up"></i></a>
                                    </div>
                                </td>
                                <td>
                                    <h5>$@(line.Product.ProductPrice * line.Quantity)</h5>
                                </td>
                            </tr>
                            <tr class="bottom_button">
                                <td>
                                    <a class="btn_1" href="#">Update Cart</a>
                                </td>
                                <td></td>
                                <td></td>
                                <td>
                                    <div class="cupon_text float-right">
                                        <a class="btn_1" href="/Cart/RemoveFromCart/?productId=@line.Product.ProductId">Remove</a>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td>
                                    <h5>Subtotal</h5>
                                </td>
                                <td>
                                    <h5>$@(Model.ComputeTotalValue())</h5>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="checkout_btn_inner float-right">
                    <a class="btn_1" href="/Products/Index">Continue Shopping</a>
                    <a class="btn_1 checkout_btn_1" href="/Cart/AddToCart">Proceed to checkout</a>
                </div>
            </div>
        </div>
</section>
<!--================End Cart Area =================-->
